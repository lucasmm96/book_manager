doctype html
html(lang="en")
  include ../includes/head.pug
  body
    include ../includes/navbar.pug
    main
      if bookList.length > 0
        table
          tr
            th Title
            th Options
          each book in bookList
            tr
              td= book.title
              td
                a(href=('/book/detail/' + book.id)) Details
                a(href=('/book/add/' + book.id)) Edit
                a(href=('/book/remove/' + book.id)) Remove
      else
        h2 Books not found
    include ../includes/footer.pug