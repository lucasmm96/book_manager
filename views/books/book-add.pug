doctype html
html(lang="en")
  include ../includes/head.pug
  body
    include ../includes/navbar.pug
    main.main_content
      div.form-card
        h3 Add a book:
        form(action="/add-book" method='POST')
          div.col
            each attribute in bookAttributes
              if attribute.label != "Status"
                label(for=attribute.name)= attribute.label + ':'
                input(type=attribute.type name=attribute.name)
              else
                  label(for=attribute.name)= attribute.label + ':'
                  div
                    each option in attribute.options
                      input(type="radio", name=attribute.name value=option.label)
                      span= option.label
          div.form-submit
            button(type='submit') Submit
    include ../includes/footer.pug