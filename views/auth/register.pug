doctype html
html(lang='en')
  include ../includes/head.pug
  body
    include ../includes/navbar.pug
    main
      .box-form.center
        form(action='/user-register' method='POST')
          label(for='username') Username:
          input(type='text' name='username' value=oldInput.username)
          label(for='email') Email:
          input(type='text' name='email' value=oldInput.email)
          label(for='password') Password:
          input(type='password' name='password' value=oldInput.password)
          label(for='checkPassword') Password Confirmation:
          input(type='password' name='checkPassword' value=oldInput.checkPassword)
          .row.pt-20
            .column
              input(type='hidden' name='csrf' value=csrfToken)
              input(type="submit", value="Save")
            .column
              .button-link
                a(href='/profile') Cancel
    include ../includes/footer.pug