doctype html
html(lang="en")
  include ./includes/head.pug
  body
    include ./includes/navbar.pug
    main
      h1 Book detail
      .book-card
        h2= book.title
        p Author: #{ book.author }
        p AddedAt: #{ book.added_at }
        p FinishedAt: #{ book.finished_at }
        p Score: #{ book.score }
        p=(book.status === undefined || book.status === null ? 'Status: Not set' : 'Status: ' + book.status)
        a(href=('/book/' + book.id))