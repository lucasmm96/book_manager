doctype html
html(lang="en")
  include ../includes/head.pug
  body
    include ../includes/navbar.pug
    main.main_content
      div.form-card
        if editMode === 'true'
          h3 Edit a book:
        else
          h3 Add a book:
        form(action=(editMode === 'true' ? '/admin/edit-book' : '/admin/add-book') method='POST')
          div.col
            label(for='title') Title:
            input(type='text' name='title' value=(editMode === 'true' ? book.title : ''))
            label(for='author') Author:
            input(type='text' name='author' value=(editMode === 'true' ? book.author : ''))
            if editMode === 'true'
              input(type='hidden' name='id' value=book._id)
            div.form-submit
              button(type='submit') Save
              button
                a.clean-style(href='/admin/manage-book') Cancel
    include ../includes/footer.pug