doctype html
html(lang="en")
  include ../includes/head.pug
  body
    include ../includes/navbar.pug
    main
      .flex-end
        a(href='/admin/manage-book/add')  Add a Book
      if numberOfBooks > 0
        table
          tr
            th Title
            th Options
          each book in bookList
            tr
              td= book.title
              td
                a.table-button(href=('/admin/manage-book/edit/' + book._id)) Edit
                a.table-button(href=('/admin/manage-book/delete/' + book._id)) Remove
        - var link = '/admin/manage-book'
        include ../includes/pagination.pug
      else
        h2 Books not found
    include ../includes/footer.pug